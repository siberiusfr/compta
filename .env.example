# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=compta_db
POSTGRES_USER=compta_user
POSTGRES_PASSWORD=compta_password_change_me

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-256-bits
JWT_EXPIRATION=86400000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# MinIO Configuration
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=compta-documents
MINIO_REGION=us-east-1

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@compta-erp.tn
SMTP_FROM_NAME=COMPTA ERP

# SMS Configuration (Optional)
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_FROM_NUMBER=+216XXXXXXXX

# Application Configuration
APP_NAME=COMPTA ERP
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
API_GATEWAY_URL=http://localhost:8080

# Services Ports
GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
ACCOUNTING_SERVICE_PORT=8082
DOCUMENT_SERVICE_PORT=8083
HR_SERVICE_PORT=8084
NOTIFICATION_SERVICE_PORT=3001
MIGRATION_SERVICE_PORT=8085
FRONTEND_PORT=3000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=*

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# OCR Configuration (Optional)
OCR_ENABLED=false
OCR_API_KEY=your-ocr-api-key

# Logging
LOG_LEVEL=INFO
LOG_PATH=./logs

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=10

# Session Configuration
SESSION_TIMEOUT=1800

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
