{
  "name": "compta-formatter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{xml,sql,yml,yaml,json}\"",
    "format:sql": "prettier --write \"**/*.sql\"",
    "format:xml": "prettier --write \"**/*.xml\"",
    "format:yaml": "prettier --write \"**/*.{yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{xml,sql,yml,yaml,json}\""
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^3.4.2",
    "prettier": "^3.4.2",
    "prettier-plugin-java": "^2.7.7",
    "prettier-plugin-sql": "^0.19.2",
    "prettier-plugin-xml": "^0.1.0"
  }
}
